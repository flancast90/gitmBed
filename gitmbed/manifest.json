{

  "name": "gitmbed",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "A tool to safely embed iframes in your GitHub README.",
  "author": "Finn Lancaster",
  "icons": {"128": "assets/img/icon.png"},
  "browser_action": 
    {
        "default_icon": "assets/img/icon.png",
        "default_popup": "popup.html"
    },
  "content_scripts": [
    {
        "js": ["assets/js/script.js", "assets/js/buttons.js"],
        "matches": ["https://*/*", "http://*/*", "file://*/*"]
    }
   ]

}
